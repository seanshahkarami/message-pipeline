#!/usr/bin/env python3
import os
import re
import subprocess


def set_plugin_credentials(username, password):
    try:
        subprocess.check_call([
            'rabbitmqctl',
            'authenticate_user',
            username,
            password])
        return
    except subprocess.CalledProcessError:
        pass

    try:
        subprocess.check_call([
            'rabbitmqctl',
            'add_user',
            username,
            password])
    except subprocess.CalledProcessError:
        subprocess.check_call([
            'rabbitmqctl',
            'change_password',
            username,
            password])

    queue = 'to-' + username
    configure = '^{}$'.format(queue)
    write = '^publish$'
    read = '^{}$'.format(queue)

    subprocess.check_call([
        'rabbitmqctl',
        'set_permissions',
        username,
        configure,
        write,
        read])


url = os.environ['WAGGLE_PLUGIN_RABBITMQ_URL']
username, password = re.match('amqp://([^:]*):([^@]*)@', url).groups()

set_plugin_credentials(username, password)
