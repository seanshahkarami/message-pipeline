#!/bin/sh

while true; do
  case $(systemctl get-default) in
    waggle-core.target)
      systemctl stop $(systemctl | grep waggle-plugin-)
      ;;
    waggle-platform.target)
      cp /wagglerw/systemd/system/waggle-plugin* /run/systemd/system
      systemctl start $(ls /run/systemd/system | grep waggle-plugin-)
      ;;
  esac

  sleep 60
done
