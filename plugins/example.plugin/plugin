#!/usr/bin/env python3
import time
from waggle.protocol.v0.pipeline import Plugin
from waggle.protocol.v0 import pack_message_for_sensorgrams


plugin = Plugin()

while True:
    for msg in plugin.get_waiting_messages():
        print('Got a message!')
        print(msg)

    print('Sending sensor data!')

    msg = pack_message_for_sensorgrams([
        {'sensor_id': 1, 'parameter_id': 1, 'value': b'111'},
        {'sensor_id': 1, 'parameter_id': 2, 'value': b'222222'},
    ])

    plugin.publish(msg)

    time.sleep(1)
