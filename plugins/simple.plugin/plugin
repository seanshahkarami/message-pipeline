#!/usr/bin/env python3
import waggle.plugin
import time


plugin = waggle.plugin.PrintPlugin()

while True:
    plugin.add_measurement({
        'sensor_id': 1,
        'parameter_id': 1,
        'value': 21.3,
    })

    plugin.add_measurement({
        'sensor_id': 1,
        'parameter_id': 2,
        'value': 1032,
    })

    plugin.add_measurement({
        'sensor_id': 2,
        'parameter_id': 1,
        'value': 192.1,
    })

    plugin.publish_measurements()

    time.sleep(1)
