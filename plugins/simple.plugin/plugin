#!/usr/bin/env python3
from waggle.plugin import Plugin
import time


plugin = Plugin()

while True:
    plugin.add_measurement({
        'sensor_id': 1,
        'parameter_id': 1,
        'value': b'11',
    })

    plugin.add_measurement({
        'sensor_id': 1,
        'parameter_id': 2,
        'value': b'2222',
    })

    plugin.add_measurement({
        'sensor_id': 2,
        'parameter_id': 1,
        'value': b'333333',
    })

    plugin.publish_measurements()

    time.sleep(1)
